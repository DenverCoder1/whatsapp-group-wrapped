{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PHP: Launch Built-in web server",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-dxdebug.mode=debug",
                "-dxdebug.start_with_request=yes",
                "-S",
                "localhost:8555"
            ],
            "program": "",
            "cwd": "${workspaceRoot}",
            "port": 9003,
            "serverReadyAction": {
                "pattern": "Development Server \\(http://localhost:([0-9]+)\\) started",
                "uriFormat": "http://localhost:%s/index.php",
                "action": "openExternally"
            },
            "xdebugSettings": {
                "max_data": -1
            }
        },
        {
            "name": "PHP: Current File",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceRoot}",
            "runtimeArgs": [
                "-dxdebug.mode=debug",
                "-dxdebug.start_with_request=yes"
            ],
            "args": [
                "localhost",
                "1178"
            ],
            "port": 9003,
            "xdebugSettings": {
                "max_data": -1
            }
        }
    ]
}